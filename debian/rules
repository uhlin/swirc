#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS=hardening=+all
export DEB_GAIN_ROOT_CMD='sudo -nE --'
export PREFIX=/usr

override_dh_auto_clean:
	./configure
	@make clean

override_dh_auto_configure:
	./configure

# Don't automatically run the tests
override_dh_auto_test:
	@true

%:
	dh $@ --without autoreconf
